<div class="sign-in">
  <h3>Sign In</h3>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :login,label: false, required: false, input_html:{placeholder: "Email"}, autofocus: true %>
      <%= f.input :password,label: false, required: false, input_html:{placeholder: "Password"} %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign In", class: 'btn btn-success center' %>
    </div>
  <% end %>

</div>

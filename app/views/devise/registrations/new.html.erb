<div class="sign-up">
  <h3>Sign up</h3>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :username, label: false, required: true, input_html:{placeholder: 'Username'}, autofocus: true %>
      <%= f.input :email, label: false, required: true, input_html:{placeholder: 'Email'} %>
      <%= f.input :password, label: false, required: true, input_html:{placeholder: 'Choose Password'} %>
      <%= f.input :password_confirmation, label: false, required: true, input_html:{placeholder: 'Confirm Password'} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Join" %>
    </div>
  <% end %>

</div>
